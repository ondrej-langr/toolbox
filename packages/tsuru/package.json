{
  "name": "tsuru",
  "version": "0.5.3",
  "private": false,
  "description": "Simpler CLI applications with focus on code generation",
  "license": "ISC",
  "author": {
    "name": "Ondřej Langr",
    "email": "hi@ondrejlangr.cz"
  },
  "maintainers": [
    {
      "name": "Ondřej Langr",
      "email": "hi@ondrejlangr.cz"
    }
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/cjs/index.js"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts",
      "require": "./dist/cjs/schemas/index.js"
    },
    "./program": {
      "import": "./dist/program.js",
      "types": "./dist/program.d.ts",
      "require": "./dist/cjs/program.js"
    },
    "./logger": {
      "import": "./dist/logger/index.js",
      "types": "./dist/logger/index.d.ts",
      "require": "./dist/cjs/logger/index.js"
    },
    "./ast/js-ts": {
      "import": "./dist/ast/js-ts/index.js",
      "types": "./dist/ast/js-ts/index.d.ts",
      "require": "./dist/cjs/ast/js-ts/index.js"
    },
    "./ast/json": {
      "import": "./dist/ast/json/index.js",
      "types": "./dist/ast/json/index.d.ts",
      "require": "./dist/cjs/ast/json/index.js"
    },
    "./parsers": {
      "import": "./dist/parsers/index.js",
      "types": "./dist/parsers/index.d.ts",
      "require": "./dist/cjs/parsers/index.js"
    }
  },
  "bin": {
    "tsu": "./.bin/run-tsuru.js",
    "tsuru": "./.bin/run-tsuru.js"
  },
  "files": [
    "src",
    "dist",
    ".bin"
  ],
  "scripts": {
    "prebuild": "rm -rf dist .temp",
    "build": "pnpm build:types && pnpm build:esm && pnpm build:cjs",
    "build:cjs": "swc ./src -d dist/cjs --copy-files --include-dotfiles --strip-leading-paths --config-file .cjs.swcrc && echo \"{ \\\"type\\\": \\\"commonjs\\\" }\" > dist/cjs/package.json",
    "build:esm": "swc ./src -d dist --copy-files --include-dotfiles --strip-leading-paths --config-file .esm.swcrc && echo \"{ \\\"type\\\": \\\"module\\\" }\" > dist/package.json",
    "build:types": "tsc --project tsconfig.build.json",
    "start": "pnpm run prebuild && pnpm run build && node .bin/run-tsuru.js --cwd=\"./.temp\"",
    "test": "pnpm test:unit && pnpm test:types",
    "test:types": "tsc --noEmit",
    "test:unit": "vitest --watch false --passWithNoTests"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.7",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "cosmiconfig-typescript-loader": "^6.1.0",
    "es-toolkit": "^1.31.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "inquirer": "9.2.23",
    "picocolors": "^1.1.1",
    "prettier": "^3.3.3",
    "semver": "^7.6.3",
    "yaml": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.7.42",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.17.6",
    "@types/semver": "^7.5.8",
    "chokidar": "^4.0.3",
    "typescript": "5.5.2",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=8.15.0"
  }
}
