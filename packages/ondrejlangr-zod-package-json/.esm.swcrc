{
  "$schema": "https://swc.rs/schema.json",
  "module": {
    "type": "nodenext"
  },
  "jsc": {
    "target": "esnext",
    "baseUrl": "./src",
    "parser": {
      "syntax": "typescript",
      "tsx": true
    },
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "transform": {
      "react": {
        "runtime": "automatic"
      }
    }
  }
}